    "@typescript-eslint/parser": "^8.21.0",
    "chai": "^5.1.2",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^10.0.0",
